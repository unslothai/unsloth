{
  "name": "@ramarivera/opencode-model-announcer",
  "version": "1.0.2",
  "description": "OpenCode plugin that automatically announces the current model in the chat context.",
  "author": {
    "name": "Ramiro Rivera",
    "email": "ramarivera@gmail.com"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ramarivera/opencode-model-announcer"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src/version.ts"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun run build:types || true",
    "build:types": "tsc --project tsconfig.build.json --noEmitOnError false"
  },
  "dependencies": {
    "@opencode-ai/plugin": "1.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@opencode-ai/sdk": "^1.0.224",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "bun-types": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^3.2.4"
  },
  "main": "./dist/index.js"
}
